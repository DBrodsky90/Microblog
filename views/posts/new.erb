<section>

	<form action="/posts" method="POST" style="text-align: center;">
		
		<label><strong>Title</strong><br>
			<input type="text" name="post[title]"><br>
		</label><br>

		<label><strong>Content</strong><br>
			<input type="text" name="post[content]"><br>
		</label><br>

		<label><strong>Author</strong><br>
			<select name="post[author_id]">
				<% @authors.each do |author| %>
					<option value="<%= author.id %>"><%= author.name %></option>			
				<% end %>
			</select>
		</label><br>

		<br>

		<label><strong>Tags</strong><br>
			<% @tags.each do |tag| %>
			<input type="checkbox" name="tags[]" value="<%= tag.id %>"><%= tag.name %><br>
			<% end %>
		</label>

		<br>

		<input type="submit" value="Submit">

	</form>

</section>

