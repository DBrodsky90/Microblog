<section>

	<form action="/posts/<%= @post.id %>" method="POST" style="text-align: center;">

		<input type="hidden" name="_method" value="PUT">
		
		<label><strong>Title</strong><br>
			<input type="text" name="post[title]" value="<%= @post.title %>"><br>
		</label><br>

		<label><strong>Content</strong><br>
			<input type="text" name="post[content]" value="<%= @post.content %>"><br>
		</label><br>

		<label><strong>Author</strong><br>
			<select name="author[author_id]">
				<% @authors.each do |author| %>
					<option <%= "selected" if author.name == @post.author.name %> value="<%= author.id %>"><%= author.name %></option>			
				<% end %>
			</select>
		</label><br>

		<br>

		<label><strong>Tags</strong><br>
			<% @tags.each do |tag| %>
				<input <%= "checked" if @post.tags.include?(tag) %> type="checkbox" name="tags[]" value="<%= tag.id %>"><%= tag.name %><br>
			<% end %>
		</label>

		<input type="submit" value="Submit">

	</form>

	<br>

	<form action="/posts/<%= @post.id %>" method="POST" style="text-align: center;">

		<input type="hidden" name="_method" value="DELETE">

		<button>DELETE POST</button>
		
	</form>

</section>

